<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.edu.ifspsaocarlos.sdm.fmanager.PrincipalActivity">
    <!--
    Este layout será dividido em duas partes: uma parte superior que contém um botão e uma parte
    inferior que contém um FrameLayout. Quando o botão for clicado vai alterar o FrameLayout entre
    o Fragmento 1 e o Fragmento 2.
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/bt_muda_fragmento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/muda_fragmento"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
